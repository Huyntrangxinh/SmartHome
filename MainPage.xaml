<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartHomeDashboard2.MainPage"
    BackgroundColor="#F5F6FA">

   <VerticalStackLayout
    Padding="24"
    VerticalOptions="Start"
    HorizontalOptions="Start">


        <!-- HOME ICON BUTTON -->
        <Frame
            WidthRequest="64"
            HeightRequest="64"
            CornerRadius="20"
            BackgroundColor="#6C63FF"
            HasShadow="True"
            Padding="14">

            <Image
                Source="home.png"
                WidthRequest="36"
                HeightRequest="36"
                Aspect="AspectFit" />

        </Frame>

    </VerticalStackLayout>

</ContentPage>
