<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartHomeDashboard2.MainPage"
    BackgroundColor="#F5F6FA">

    <VerticalStackLayout Spacing="0">

        <!-- HEADER CARD -->
        <Frame
            BackgroundColor="White"
            CornerRadius="16"
            HasShadow="True"
            Padding="16"
            Margin="16,12,16,0">

            <Grid
                ColumnDefinitions="Auto,*,Auto"
                VerticalOptions="Center">

                <!-- LEFT ICON -->
                <Frame
                    WidthRequest="56"
                    HeightRequest="56"
                    CornerRadius="16"
                    BackgroundColor="#6C63FF"
                    Padding="12"
                    HasShadow="True"
                    VerticalOptions="Center">

                    <Image
                        Source="home.png"
                        WidthRequest="28"
                        HeightRequest="28"
                        Aspect="AspectFit" />
                </Frame>

                <!-- TITLE + SUBTITLE -->
                <VerticalStackLayout
                    Grid.Column="1"
                    Spacing="6"
                    Padding="16,0"
                    VerticalOptions="Center">

                    <Label
                        Text="Smart Home"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="#1F2937" />

                    <HorizontalStackLayout
                        Spacing="8"
                        VerticalOptions="Center">

                        <Image
                            Source="wifi.png"
                            WidthRequest="14"
                            HeightRequest="14"
                            VerticalOptions="Center" />

                        <Label
                            Text="8 devices"
                            FontSize="14"
                            TextColor="#6B7280"
                            VerticalOptions="Center" />

                        <Label
                            Text="•"
                            FontSize="14"
                            TextColor="#9CA3AF"
                            VerticalOptions="Center" />

                        <Image
                            Source="activity.png"
                            WidthRequest="14"
                            HeightRequest="14"
                            VerticalOptions="Center" />

                        <Label
                            Text="5 active"
                            FontSize="14"
                            TextColor="#6B7280"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>

                <!-- RIGHT ACTION ICONS -->
            <HorizontalStackLayout
    Grid.Column="2"
    Spacing="14"
    VerticalOptions="Center">

    <Image Source="menu.png" WidthRequest="14" HeightRequest="14" />
    <Image Source="moon.png" WidthRequest="14" HeightRequest="14" />
    <Image Source="settings.png" WidthRequest="14" HeightRequest="14" />

</HorizontalStackLayout>


            </Grid>
        </Frame>
<Frame
    x:Name="SegmentContainer"
    BackgroundColor="#E5E7EB"
    CornerRadius="28"
    HasShadow="True"
    BorderColor="Transparent"
    Padding="6"
    Margin="16,16,16,0">

    <Grid ColumnDefinitions="*,*,*" x:Name="SegmentGrid">

        <!-- COMPACT (ACTIVE) -->
        <Frame
            x:Name="CompactFrame"
            Grid.Column="0"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent">
            <Label
                Text="Compact"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="CompactLabel"
            Grid.Column="0"
            Text="Compact"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsVisible="False">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCompactTapped" />
            </Label.GestureRecognizers>
        </Label>

        <!-- SMART -->
        <Frame
            x:Name="SmartFrame"
            Grid.Column="1"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent"
            IsVisible="False">
            <Label
                Text="Smart"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="SmartLabel"
            Grid.Column="1"
            Text="Smart"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSmartTapped" />
            </Label.GestureRecognizers>
        </Label>

        <!-- PREMIUM -->
        <Frame
            x:Name="PremiumFrame"
            Grid.Column="2"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent"
            IsVisible="False">
            <Label
                Text="Premium"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="PremiumLabel"
            Grid.Column="2"
            Text="Premium"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPremiumTapped" />
            </Label.GestureRecognizers>
        </Label>

    </Grid>
</Frame>



    </VerticalStackLayout>
</ContentPage>
