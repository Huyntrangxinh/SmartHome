<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartHomeDashboard2.MainPage"
    BackgroundColor="#F5F6FA">

	<ScrollView>
		<VerticalStackLayout Spacing="20">

			<!-- ================= HEADER ================= -->
			<Frame
                Margin="16,12,16,0"
                Padding="16"
                CornerRadius="16"
                HasShadow="True"
                BackgroundColor="White">

				<Grid ColumnDefinitions="Auto,*,Auto">

					<!-- Icon -->
					<Frame
                        WidthRequest="56"
                        HeightRequest="56"
                        CornerRadius="16"
                        BackgroundColor="#6C63FF"
                        Padding="12"
                        HasShadow="True">

						<Image Source="home.png" />
					</Frame>

					<!-- Title -->
					<VerticalStackLayout Grid.Column="1" Padding="16,0" Spacing="6">
						<Label
                            Text="Smart Home"
                            FontSize="22"
                            FontAttributes="Bold"
                            TextColor="#1F2937" />

						<HorizontalStackLayout Spacing="8">
							<Image Source="wifi.png" WidthRequest="14" />
							<Label Text="8 devices" FontSize="14" TextColor="#6B7280" />
							<Label Text="•" TextColor="#9CA3AF" />
							<Image Source="activity.png" WidthRequest="14" />
							<Label Text="5 active" FontSize="14" TextColor="#6B7280" />
						</HorizontalStackLayout>
					</VerticalStackLayout>

					<!-- Actions -->
					<HorizontalStackLayout Grid.Column="2" Spacing="14" VerticalOptions="Center">
						<Image Source="menu.png" WidthRequest="14" />
						<Image Source="moon.png" WidthRequest="14" />
						<Image Source="settings.png" WidthRequest="14" />
					</HorizontalStackLayout>

				</Grid>
			</Frame>

			<!-- ================= STATS GRID ================= -->
			<Grid
                Margin="16,0"
                RowDefinitions="Auto,Auto"
                ColumnDefinitions="*,*"
                RowSpacing="12"
                ColumnSpacing="12">

				<!-- Active -->
				<Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="16"
                       Padding="16"
                       BackgroundColor="#E6FFF2">
					<HorizontalStackLayout Spacing="12">
						<Frame BackgroundColor="#22C55E" WidthRequest="40" HeightRequest="40" CornerRadius="20">
							<Label Text="⚡" HorizontalOptions="Center" VerticalOptions="Center" />
						</Frame>
						<VerticalStackLayout>
							<Label Text="5" FontSize="20" FontAttributes="Bold" />
							<Label Text="Active Now" FontSize="13" TextColor="#16A34A" />
						</VerticalStackLayout>
					</HorizontalStackLayout>
				</Frame>

				<!-- Efficiency -->
				<Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="16"
                       Padding="16"
                       BackgroundColor="#E0F7FF">
					<HorizontalStackLayout Spacing="12">
						<Frame BackgroundColor="#3B82F6" WidthRequest="40" HeightRequest="40" CornerRadius="20">
							<Label Text="📈" HorizontalOptions="Center" VerticalOptions="Center" />
						</Frame>
						<VerticalStackLayout>
							<Label Text="92%" FontSize="20" FontAttributes="Bold" />
							<Label Text="Efficiency" FontSize="13" TextColor="#2563EB" />
						</VerticalStackLayout>
					</HorizontalStackLayout>
				</Frame>

				<!-- Family -->
				<Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="16"
                       Padding="16"
                       BackgroundColor="#F3E8FF">
					<HorizontalStackLayout Spacing="12">
						<Frame BackgroundColor="#A855F7" WidthRequest="40" HeightRequest="40" CornerRadius="20">
							<Label Text="👨‍👩‍👧" HorizontalOptions="Center" VerticalOptions="Center" />
						</Frame>
						<VerticalStackLayout>
							<Label Text="3" FontSize="20" FontAttributes="Bold" />
							<Label Text="Family Home" FontSize="13" TextColor="#7C3AED" />
						</VerticalStackLayout>
					</HorizontalStackLayout>
				</Frame>

				<!-- Monitoring -->
				<Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="16"
                       Padding="16"
                       BackgroundColor="#FFF4D6">
					<HorizontalStackLayout Spacing="12">
						<Frame BackgroundColor="#F97316" WidthRequest="40" HeightRequest="40" CornerRadius="20">
							<Label Text="⏰" HorizontalOptions="Center" VerticalOptions="Center" />
						</Frame>
						<VerticalStackLayout>
							<Label Text="24/7" FontSize="20" FontAttributes="Bold" />
							<Label Text="Monitoring" FontSize="13" TextColor="#EA580C" />
						</VerticalStackLayout>
					</HorizontalStackLayout>
				</Frame>

			</Grid>

			<!-- ================= QUICK ACTIONS ================= -->
			<Frame
                Margin="16,0"
                Padding="16"
                CornerRadius="20"
                HasShadow="True"
                BackgroundColor="White">

				<VerticalStackLayout Spacing="16">
					<Label Text="Quick Actions" FontSize="18" FontAttributes="Bold" />

					<Grid ColumnDefinitions="*,*" ColumnSpacing="12">
						<Button
                            Text="🏠 All On"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            CornerRadius="16" />

						<Button
                            Grid.Column="1"
                            Text="🌙 Night Mode"
                            BackgroundColor="#F1F5F9"
                            TextColor="#111827"
                            CornerRadius="16" />
					</Grid>
				</VerticalStackLayout>
			</Frame>

			<!-- ================= BOTTOM NAV ================= -->
			<Frame
                Margin="16,0,16,20"
                Padding="12"
                CornerRadius="22"
                HasShadow="True"
                BackgroundColor="White">

				<Grid ColumnDefinitions="*,*,*,*">
					<VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
						<Label Text="🏠" />
						<Label Text="Home" FontSize="12" TextColor="#2563EB" />
					</VerticalStackLayout>

					<VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
						<Label Text="📍" />
						<Label Text="Rooms" FontSize="12" />
					</VerticalStackLayout>

					<VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
						<Label Text="📱" />
						<Label Text="Scenes" FontSize="12" />
					</VerticalStackLayout>

					<VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
						<Label Text="⚙️" />
						<Label Text="Settings" FontSize="12" />
					</VerticalStackLayout>
				</Grid>
			</Frame>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
