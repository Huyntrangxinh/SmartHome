<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartHomeDashboard2.MainPage"
    BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

        <!-- HEADER CARD -->
        <Frame
            BackgroundColor="White"
            CornerRadius="16"
            HasShadow="True"
            Padding="16"
            Margin="16,12,16,0">

            <Grid
                ColumnDefinitions="Auto,*,Auto"
                VerticalOptions="Center">

                <!-- LEFT ICON -->
                <Frame
                    WidthRequest="56"
                    HeightRequest="56"
                    CornerRadius="16"
                    BackgroundColor="#6C63FF"
                    Padding="12"
                    HasShadow="True"
                    VerticalOptions="Center">

                    <Image
                        Source="home.png"
                        WidthRequest="28"
                        HeightRequest="28"
                        Aspect="AspectFit" />
                </Frame>

                <!-- TITLE + SUBTITLE -->
                <VerticalStackLayout
                    Grid.Column="1"
                    Spacing="6"
                    Padding="16,0"
                    VerticalOptions="Center">

                    <Label
                        Text="Smart Home"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="#1F2937" />

                    <HorizontalStackLayout
                        Spacing="8"
                        VerticalOptions="Center">

                        <Image
                            Source="wifi.png"
                            WidthRequest="14"
                            HeightRequest="14"
                            VerticalOptions="Center" />

                        <Label
                            Text="8 devices"
                            FontSize="14"
                            TextColor="#6B7280"
                            VerticalOptions="Center" />

                        <Label
                            Text="•"
                            FontSize="14"
                            TextColor="#9CA3AF"
                            VerticalOptions="Center" />

                        <Image
                            Source="activity.png"
                            WidthRequest="14"
                            HeightRequest="14"
                            VerticalOptions="Center" />

                        <Label
                            Text="5 active"
                            FontSize="14"
                            TextColor="#6B7280"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>

                <!-- RIGHT ACTION ICONS -->
            <HorizontalStackLayout
    Grid.Column="2"
    Spacing="14"
    VerticalOptions="Center">

    <Image Source="menu.png" WidthRequest="14" HeightRequest="14" />
    <Image Source="moon.png" WidthRequest="14" HeightRequest="14" />
    <Image Source="settings.png" WidthRequest="14" HeightRequest="14" />

</HorizontalStackLayout>


            </Grid>
        </Frame>

        <!-- GREETING / STATUS CARD -->
        <!-- Phần code của bạn KarmaLazada13 -->
        <Frame
            CornerRadius="24"
            Padding="20"
            HasShadow="True"
            Margin="16,20,16,0"
            BorderColor="Transparent">
            
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#3B82F6" Offset="0.0" />
                    <GradientStop Color="#8B5CF6" Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>

            <Grid ColumnDefinitions="*,Auto"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="8">

                <!-- Greeting -->
                <Label
                    Text="Good Evening!"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="White"
                    Grid.ColumnSpan="2" />

                <!-- Subtitle -->
                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Text="Your home is comfortable and secure"
                    FontSize="14"
                    TextColor="#EDEBFF" />

                <!-- Left info -->
                <HorizontalStackLayout
                    Grid.Row="2"
                    Spacing="16">

                    <HorizontalStackLayout Spacing="6">
                        <Label Text="🔒" FontSize="14"/>
                        <Label Text="Secure"
                               FontSize="13"
                               TextColor="White"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="6">
                        <Label Text="⚡" FontSize="14"/>
                        <Label Text="89% Efficient"
                               FontSize="13"
                               TextColor="White"/>
                    </HorizontalStackLayout>

                </HorizontalStackLayout>

                <!-- Temperature -->
                <VerticalStackLayout
                    Grid.RowSpan="3"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="Center">

                    <Label
                        Text="24°C"
                        FontSize="32"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalTextAlignment="End"/>

                    <Label
                        Text="Perfect"
                        FontSize="13"
                        TextColor="#EDEBFF"
                        HorizontalTextAlignment="End"/>
                </VerticalStackLayout>

            </Grid>
        </Frame>

<Frame
            x:Name="SegmentContainer"
            BackgroundColor="#E5E7EB"
    CornerRadius="28"
    HasShadow="True"
    BorderColor="Transparent"
    Padding="6"
    Margin="16,16,16,0">

    <Grid ColumnDefinitions="*,*,*" x:Name="SegmentGrid">

        <!-- COMPACT (ACTIVE) -->
        <Frame
            x:Name="CompactFrame"
            Grid.Column="0"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent">
            <Label
                Text="Compact"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="CompactLabel"
            Grid.Column="0"
            Text="Compact"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsVisible="False">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCompactTapped" />
            </Label.GestureRecognizers>
        </Label>

        <!-- SMART -->
        <Frame
            x:Name="SmartFrame"
            Grid.Column="1"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent"
            IsVisible="False">
            <Label
                Text="Smart"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="SmartLabel"
            Grid.Column="1"
            Text="Smart"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnSmartTapped" />
            </Label.GestureRecognizers>
        </Label>

        <!-- PREMIUM -->
        <Frame
            x:Name="PremiumFrame"
            Grid.Column="2"
            BackgroundColor="White"
            CornerRadius="22"
            Padding="16,10"
            HasShadow="True"
            BorderColor="Transparent"
            IsVisible="False">
            <Label
                Text="Premium"
                TextColor="#3B5BFF"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>
        <Label
            x:Name="PremiumLabel"
            Grid.Column="2"
            Text="Premium"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="#111827"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPremiumTapped" />
            </Label.GestureRecognizers>
        </Label>

    </Grid>
</Frame>

        <!-- COMPACT CONTROL SECTION -->
        <VerticalStackLayout Margin="16,24,16,0" Spacing="16">
            
            <!-- Title and Subtitle -->
            <VerticalStackLayout Spacing="4">
                <Label
                    Text="Compact Control"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="#1F2937" />
                <Label
                    Text="Space-efficient cards for quick access"
                    FontSize="14"
                    TextColor="#6B7280" />
            </VerticalStackLayout>

            <!-- Device Cards -->
            <VerticalStackLayout Spacing="12">
                
                <!-- Ceiling Fan Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="🌀" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Ceiling Fan"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Living Room"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- Air Conditioner Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="❄️" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Air Conditioner"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Bedroom"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- Smart TV Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="📺" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Smart TV"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Living Room"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- RGB Lights Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="💡" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="RGB Lights"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Kitchen"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- Table Fan Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="🌀" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Table Fan"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Study Room"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- Pendant Lights Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="💡" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Pendant Lights"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Dining Room"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- Split AC Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="❄️" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="Split AC"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Master Bedroom"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

                <!-- TV Card -->
                <Frame
                    CornerRadius="16"
                    Padding="16"
                    HasShadow="True"
                    BorderColor="Transparent">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E5E7EB" Offset="0.0" />
                            <GradientStop Color="#9CA3AF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                        <!-- Icon -->
                        <Frame
                            WidthRequest="48"
                            HeightRequest="48"
                            CornerRadius="24"
                            BackgroundColor="#F3F4F6"
                            Padding="12"
                            VerticalOptions="Center">
                            <Label Text="📺" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        
                        <!-- Device Info -->
                        <VerticalStackLayout
                            Grid.Column="1"
                            Spacing="4"
                            Padding="12,0"
                            VerticalOptions="Center">
                            <Label
                                Text="TV"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="#1F2937" />
                            <Label
                                Text="Bedroom"
                                FontSize="13"
                                TextColor="#6B7280" />
                        </VerticalStackLayout>
                        
                        <!-- Toggle Switch -->
                        <Switch
                            Grid.Column="2"
                            IsToggled="False"
                            OnColor="#3B82F6"
                            ThumbColor="White" />
                    </Grid>
                </Frame>

            </VerticalStackLayout>

        </VerticalStackLayout>

        <!-- STATS CARDS SECTION -->
        <Grid
            ColumnDefinitions="*,*"
            RowDefinitions="Auto"
            ColumnSpacing="12"
            RowSpacing="12"
            Margin="16,24,16,0">
            
            <!-- Active Now Card -->
            <Frame
                CornerRadius="20"
                Padding="20"
                HasShadow="True"
                BorderColor="Transparent"
                BackgroundColor="#D1FAE5">
                <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                    <!-- Icon -->
                    <Frame
                        WidthRequest="48"
                        HeightRequest="48"
                        CornerRadius="24"
                        BackgroundColor="#10B981"
                        Padding="12"
                        HasShadow="False"
                        VerticalOptions="Center">
                        <Label Text="📈" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    
                    <!-- Value and Label -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        Spacing="4"
                        Padding="12,0,0,0"
                        VerticalOptions="Center">
                        <Label
                            Text="5"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#10B981" />
                        <Label
                            Text="Active Now"
                            FontSize="12"
                            TextColor="#10B981" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Efficiency Card -->
            <Frame
                Grid.Column="1"
                CornerRadius="20"
                Padding="20"
                HasShadow="True"
                BorderColor="Transparent"
                BackgroundColor="#DBEAFE">
                <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
                    <!-- Icon -->
                    <Frame
                        WidthRequest="48"
                        HeightRequest="48"
                        CornerRadius="24"
                        BackgroundColor="#3B82F6"
                        Padding="12"
                        HasShadow="False"
                        VerticalOptions="Center">
                        <Label Text="📊" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    
                    <!-- Value and Label -->
                    <VerticalStackLayout
                        Grid.Column="1"
                        Spacing="4"
                        Padding="12,0,0,0"
                        VerticalOptions="Center">
                        <Label
                            Text="92%"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#3B82F6" />
                        <Label
                            Text="Efficiency"
                            FontSize="12"
                            TextColor="#3B82F6" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

        </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
